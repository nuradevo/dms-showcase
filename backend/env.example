# Backend environment example - DO NOT commit real secrets

# For Docker Compose (Postgres)
DATABASE_URL=postgresql+asyncpg://demo:demo@postgres:5432/demo

# If you run locally without Postgres, fallback: sqlite+aiosqlite:///./demo.db
# DATABASE_URL=sqlite+aiosqlite:///./demo.db

JWT_SECRET=change-me-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REDIS_URL=redis://redis:6379/0

# Postgres connection parts (optional)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=demo
POSTGRES_DB=demo